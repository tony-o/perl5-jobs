% layout 'basic';
% my $stash = $self->stash->{container};
  
%= include 'partials/clientmenu', stash => $stash;

% my $job = $stash->{job};
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        %if (defined $job) {
          <h3>
            %= $job->title
            <small><%= $job->jobclass ? $job->jobclass->name : 'Unclassified' %></small>
          </h3>
          <h4>
            Posted on: <b>
            %= human_date($stash->{job}->dateposted)
            </b>
          </h4>
          <p>
            %== $job->description
          </p>
        %} else {
          <h3>Sorry, job id <%=$self->param('id')%> wasn't found.</h3>
        % }
      </div>
    </div>
  </div> <!-- /container -->
