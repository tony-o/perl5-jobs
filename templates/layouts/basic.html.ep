<!DOCTYPE html>
% my $stash = $self->stash->{container};
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">

    <title><%= $stash->{title} || 'Hirenetics - ' %></title>

    <!-- Custom styles for this template -->
    <link href="/css/hirenetics.css" rel="stylesheet">
    <link href="/css/theme.css" rel="stylesheet">

    <!-- Bootstrap core CSS -->
    <link href="font-awesome/css/font-awesome.min.css" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="http://fonts.googleapis.com/css?family=Open+Sans|Lato">


    <!-- Just for debugging purposes. Don't actually copy this line! -->
    <!--[if lt IE 9]><script src="../../docs-assets/js/ie8-responsive-file-warning.js"></script><![endif]-->

    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->
    <link rel="icon" type="image/png" href="/imgs/hirenetics_favcon.png" />
  </head>

  <body>
    <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/"><img style="height:40px;" src="/imgs/logo.png" class="hn_logo" /></a>
        </div>
        <div class="collapse navbar-collapse navbar-ex1-collapse">
          <ul class="nav navbar-nav navbar-right">
% my $class = $stash->{path} || 'home';
            <li <% if ($class eq 'home') { %>class="active"<% } %>><a href="/">Home</a></li>
            <li <% if ($class =~ qr{^employer}) { %>class="active"<% } %>><a href="/employer">Employers</a></li>
            <li <% if ($class =~ qr{^client}) { %>class="active"<% } %>><a href="/jobseeker">Job Seekers</a></li>
            <% if ( defined($stash) && defined($stash->{uid}) && $stash->{uid} > 0 ) { %>
              <li <% if ($class eq 'login') { %>class="active"<% } %>><a href="/login">Logout</a></li>
            <% } else { %>
              <li <% if ($class eq 'login') { %>class="active"<% } %>><form action="/login"><button href="/login" class="btn btn-default navbar-btn register-button" style="margin-right:5px;">Login</button></form></li>
              <li <% if ($class eq 'register') { %>class="active"<% } %>><form action="/register"><button href="/register" class="btn btn-default navbar-btn register-button">Register</button></form></li>
            <% } %>
            % if (defined($stash->{utype}) && $stash->{utype} eq 'AD') {
              <li <% if ($class eq 'admin') { %>class="active"<% } %>><a href="/">[ Admin Tools ]</a></li>
            % }
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </nav>

%= content


    <div class="footer">
        <footer class="container">
          <div class="row">
            <div class="col-lg-12">
              <p>Customer Support &nbsp; &nbsp;
                    <a href="/content/privacy-policy">Privacy</a> &nbsp; &nbsp;
                    <a href="/content/terms">Terms</a>&nbsp; &nbsp;
                    <a href="/content/team">Team</a>&nbsp; &nbsp;
                    Resources &nbsp; &nbsp;
                    Jobs@Hirenetics</p>
            </div>
          </div>
            
      <div class="row">
              <div class="col-lg-12">
                    <p>Copyright &copy; Hirenetics 2014</p>
                </div>
            </div>
        </div>
        </footer>

    </div>

    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="https://code.jquery.com/jquery-1.10.2.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
    %for my $script (@{$stash->{scripts}}) {
      <script src="<%= $script %>"></script>
    %}
  </body>
</html>

